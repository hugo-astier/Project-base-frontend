{
    "name": "project-base",
    "version": "1.0.0",
    "description": "A basis for any project",
    "main": "gulpfile.js",
    "author": "Hugo",
    "copyright": "hugo2017",
    "license": "UNLICENSED",
    "paths": {
        "src": {
            "base": "./src/",
            "css": "./src/css/",
            "fontello": "./src/fontello/",
            "fonts": "./src/fonts/",
            "js": "./src/js/",
            "img": "./src/img/",
            "scss": "./src/scss/",
            "html": "./src/partials/"
        },
        "dist": {
            "base": "./dist/",
            "css": "./dist/css/",
            "js": "./dist/js/",
            "fonts": "./dist/fonts/",
            "img": "./dist/img/"
        },
        "build": {
            "base": "./build/",
            "css": "./build/css/",
            "fontello": "./build/fonts/fontello/",
            "fonts": "./build/fonts/",
            "js": "./build/js/",
            "img": "./build/img/"
        },
        "favicon": {
            "src": "./src/favicon_src.jpg",
            "dest": "./dist/img/site/",
            "path": "/img/site/"
        },
        "scss": []
    },
    "vars": {
        "siteCssName": "site.combined.min.css",
        "scssName": "style.scss",
        "cssName": "style.css"
    },
    "globs": {
        "distCss": [
            "./node_modules/normalize.css/normalize.css",
            "./build/css/*.css",
            "./build/fonts/fontello/css/*.css",
            "./src/css/*.css"
        ],
        "img": [
            "./dist/img/"
        ],
        "fonts": [
            "./build/fonts/fontello/fonts/*.{eot,ttf,woff,woff2}",
            "./src/fonts/*.{eot,ttf,woff,woff2}"
        ],
        "distJs": [
            "./build/js/*.js"
        ],
        "srcJs": "./src/js/app.js",
        "srcHtmlIndex": "./src/index.html",
        "siteIcon": "./dist/img/site/favicon.*",
        "partials": {
            "header": "./src/partials/header.html",
            "body": "./src/partials/body.html",
            "footer": "./src/partials/footer.html"
        }
    },
    "dependencies": {
        "fg-loadcss": "^1.2.0",
        "fontfaceobserver": "^2.0.5",
        "jquery": "^3.2.1",
        "lazysizes": "^2.0.6",
        "loadjs": "^3.3.1",
        "normalize.css": "^5.0.0",
        "tiny-cookie": "^1.0.1"
    },
    "devDependencies": {
        "babel-plugin-transform-runtime": "^6.15.0",
        "babel-preset-es2015": "^6.16.0",
        "babelify": "^8.0.0",
        "browserify": "^14.5.0",
        "chalk": "^1.1.3",
        "eslint": "^4.10.0",
        "fancy-log": "^1.2.0",
        "git-rev-sync": "^1.7.1",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^3.1.0",
        "gulp-babel": "^6.1.2",
        "gulp-cached": "^1.1.1",
        "gulp-concat": "^2.6.0",
        "gulp-cssnano": "^2.1.2",
        "gulp-debug": "^2.1.2",
        "gulp-download": "^0.0.1",
        "gulp-favicons": "^2.2.6",
        "gulp-filter": "^5.0.1",
        "gulp-fontello": "^0.4.6",
        "gulp-header": "^1.8.7",
        "gulp-if": "^2.0.1",
        "gulp-imagemin": "^3.1.1",
        "gulp-inject": "^4.3.0",
        "gulp-livereload": "^3.8.1",
        "gulp-load-plugins": "^1.3.0",
        "gulp-newer": "^1.2.0",
        "gulp-plumber": "^1.1.0",
        "gulp-print": "^2.0.1",
        "gulp-rename": "^1.2.2",
        "gulp-replace": "0.5.4",
        "gulp-rev": "^7.1.0",
        "gulp-sass": "^2.1.0",
        "gulp-size": "^2.1.0",
        "gulp-sourcemaps": "^2.2.1",
        "gulp-streamify": "1.0.2",
        "gulp-uglify": "^1.5.4",
        "gulp-util": "^3.0.8",
        "moment": "^2.14.1",
        "pa11y": "^4.11.0",
        "run-sequence": "^2.2.0",
        "sass-lint": "^1.12.1",
        "standard": "^10.0.3",
        "vinyl-buffer": "^1.0.0",
        "vinyl-source-stream": "^1.1.0"
    },
    "scripts": {
        "start": "gulp",
        "build": "gulp build"
    }
}
